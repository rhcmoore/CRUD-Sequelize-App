

<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center" id="title">
      <h1 class="section-title" id="main-title">Potluck Organizer</h1>
      <h5>First Wednesday of the Month</h5>
      <h6>Menlo Park  |  3:00PM</h6>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="half" id="left-half">
        <h2 class="section-title">On the Menu</h2>
        <hr>
        {{#each burgers}}
          {{#unless devoured}}
          <div class="line-item">
            <div class="dish-name">{{burger_name}}</div>
            <div class="button-area text-right">
              <button class="change-status deselect" data-id="{{id}}" data-devoured=1>
                –
              </button>
              <button class="delete-item" data-id="{{id}}">
                ✕
              </button>
            </div>
          </div>
          {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-lg-6">
      <div class="half" id="right-half">
        <div class="add-new">
          <h2 class="section-title">Add Your Own Dish</h2>
          <hr>
          <form class="create-form">

            <div class="form-group">
              <label for="burger_name">Dish Name:</label>
              <input type="text" id="new-burger" name="burger_name">
            </div>

            <div class="form-group">
              <input type="radio" name="devoured" value="0" checked> I'm Bringing This Dish<br>
              <input type="radio" name="devoured" value="1"> Someone Should Bring This Dish
            </div>

            <button type="submit">Add Dish</button>

          </form>
        </div>
        <div class="suggestions">
          <h2 class="section-title">Other Suggestions</h2>
          <hr>
          {{#each burgers}}
            {{#if devoured}}
              <div class="line-item">
                <div class="dish-name">{{burger_name}}</div>
                <div class="button-area text-right">
                  <button class="change-status select" data-id="{{id}}" data-devoured=0>
                    +
                  </button>
                  <button class="delete-item" data-id="{{id}}">
                    ✕
                  </button>
                </div>
              </div>
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>




